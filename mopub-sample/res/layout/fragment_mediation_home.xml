<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="wrap_content" tools:context="com.mopub.simpleadsdemo.MediationHomeFragment"
    android:id="@+id/fragment_mediation_home">

    <!-- TODO: Update blank relative layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/adUnitTextView"
        android:id="@+id/adUnitTextView"
        android:textSize="22sp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:id="@+id/adUnitId"
        android:layout_toRightOf="@id/adUnitTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:singleLine="true"
        android:ellipsize="start"
        android:gravity="top|left" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/adUnitTextView"
        android:layout_toRightOf="@+id/adUnitTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentLeft="false"
        android:layout_marginTop="50dp"
        android:id="@+id/adFormatRadioGroup">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bannerButton"
            android:id="@+id/bannerRadioButton"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/interstitialButton"
            android:id="@+id/interstitialRadioButton" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nativeButton"
            android:id="@+id/nativeRadioButton" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rewardedVideoButton"
            android:id="@+id/rewardedVideoButton" />
    </RadioGroup>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/go_button"
        android:id="@+id/go_button"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/adFormatRadioGroup"
        android:layout_alignEnd="@+id/adFormatRadioGroup"
        android:nestedScrollingEnabled="true" />

</RelativeLayout>
